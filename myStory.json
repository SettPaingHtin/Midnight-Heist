{
    "Title": "Midnight Heist",
    "Credits": "Created by Sett Paing Htin(shtin@ucsc.edu)",
    "InitialLocation": "Foyer",
  
    "Locations": {
      "Foyer": {
        "Body": "You ease the door shut behind you. A dim bulb flickers overhead. Hallways lead left to the living room and right to the kitchen.",
        "Choices": [
          { "Text": "Head left to the living room",  "Target": "LivingRoom" },
          { "Text": "Head right to the kitchen",      "Target": "Kitchen"    }
        ]
      },
  
      "LivingRoom": {
        "Body": "Family photos line the mantle. A hallway leads deeper into the house. A door to the right says \"Study.\"",
        "Choices": [
          { "Text": "Sneak into the study", "Target": "Study" },
          { "Text": "Continue down the hallway", "Target": "BackHallway" }
        ]
      },
  
      "Kitchen": {
        "Body": "The kitchen smells like leftover take‑out. A lone **Dog Treat** sits on the counter.",
        "Item": "Treat",
        "Choices": [
          { "Text": "Return to the foyer", "Target": "Foyer" }
        ]
      },
  
      
    "Study": {
        "Body": "Books and an ancient computer fill the study. The screen blinks SECURITY SYSTEM – STATUS <strong>ACTIVE</strong>.",
        "Choices": [
          {
            "Text": "Disable the alarm",
            "Target": "Study",
            "SetFlag": "alarmOff",
            "RequiresFlagNot": "alarmOff"
          },
          {
            "Text": "Back to the living room",
            "Target": "LivingRoom"
          }
        ]
      },
  
      "BackHallway": {
        "Type": "GuardDog",
        "Body": "A hallway stretches toward the office and master bedroom. A guard dog patrols here.",
        "Choices": [
          {
            "Text": "Try to calm the dog",
            "Target": "BackHallway",
            "RequiresFlagNot": "dogDistracted"
          },
          {
            "Text": "Retreat to the living room",
            "Target": "LivingRoom"
          },
          {
            "Text": "Enter the office",
            "Target": "OfficeDesk",
            "RequiresFlag": "dogDistracted"
          },
          {
            "Text": "Enter the master bedroom",
            "Target": "MasterBedroom",
            "RequiresFlag": "dogDistracted"
          }
        ]
      },
  
      "OfficeDesk": {
        "Body": "You slip into the quiet office. Papers everywhere. In the top drawer you find a sticky note: **Key Code 7329**.",
        "Item": "KeyCode",
        "Choices": [
          { "Text": "Head to the master bedroom", "Target": "MasterBedroom" },
          { "Text": "Return to the hallway",      "Target": "BackHallway"   }
        ],
        "RequiresFlag": "dogDistracted"
      },
  
      "MasterBedroom": {
        "Body": "Moonlight filters through curtains. A solid safe sits in the corner.",
        "Choices": [
          {
            "Text": "Examine the safe",
            "Target": "SafeRoom"
          },
          {
            "Text": "Return to the hallway",
            "Target": "BackHallway"
          }
        ],
        "RequiresFlag": "dogDistracted"
      },
  
      "SafeRoom": {
        "Type": "Safe",
        "Body": "The heavy safe hums softly, waiting for the correct code.",
        "Choices": [
          { "Text": "Back away", "Target": "MasterBedroom" }
        ]
      }
    }
  }
  